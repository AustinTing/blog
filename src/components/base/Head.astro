---
interface Props {
  title?: string;
  description?: string;
  pubDate?: string;
  lastModDate?: string;
}

const SITE_TITLE = 'Learning Astro Blog';
const SITE_DESCRIPTION = 'Step-by-step notes while rebuilding the astro-antfustyle-theme.';
const SITE_AUTHOR = 'Your Name';
const SITE_LANG = 'en';

const { title, description, pubDate, lastModDate } = Astro.props as Props;

const pageTitle = title ? `${title} Â· ${SITE_TITLE}` : SITE_TITLE;
const pageDescription = description ?? SITE_DESCRIPTION;
const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : undefined;
const ogType = pubDate ? 'article' : 'website';
---
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="description" content={pageDescription} />
<meta name="author" content={SITE_AUTHOR} />
<title>{pageTitle}</title>

<meta property="og:type" content={ogType} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={pageDescription} />
{canonicalURL && <meta property="og:url" content={canonicalURL} />}

<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={pageDescription} />

<meta name="language" content={SITE_LANG} />
{canonicalURL && <link rel="canonical" href={canonicalURL} />}
{pubDate && <meta property="article:published_time" content={pubDate} />}
{lastModDate && <meta property="article:modified_time" content={lastModDate} />}
